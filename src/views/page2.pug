        .p2-pt {background-image: url(./static/images/p2_pt.png);}
        .p2-ag {background-image: url(./static/images/p2_ag.png);}
        .p2-mg {background-image: url(./static/images/p2_mg.png);}
        .p2-bbin {background-image: url(./static/images/p2_bbin.png);}
