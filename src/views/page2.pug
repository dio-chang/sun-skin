            margin-top: 60px;
        }
        .p2-promotion {
            width: 360px;
            background: url(./static/images/p2_promotion.gif) no-repeat;
        }
        .p2-promotion .more {
            width: 100%;
            text-align: right;
            padding-top: 1.5em;
        }
        .p2-promotion .more a {
            color: #F39C51;
            letter-spacing: 3px;
        }
        .p2-promotion .more .fa {
            margin-left: .5em;
        }
        .p2-promotion ul {
            margin-top: 40px;
            width: 360px;
        }
        .p2-promotion ul li {
            margin-bottom: .9em;
        }
        .p2-promotion ul li.minor {
            opacity: 0.5;
        }
        .p2-promotion ul li::before {
            content: ">";
            margin: 0 1em 0 2em;
            color: white;
        }
        .p2-promotion ul li .date {
            display: inline;
            float: right;
            margin-right: 10px;
        }
        .layout-footer {
            width: 100%;
